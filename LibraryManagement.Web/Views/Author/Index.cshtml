@using LibraryManagement.Web.ViewModels.Author
@model IEnumerable<AuthorWithBooksViewModel>

<h2>All Authors</h2>

<form asp-action="Index" method="get" class="mb-3">
    <input type="text" name="searchTerm" placeholder="Search authors..." class="form-control" />
</form>

@foreach (var author in Model)
{
    <div class="card mb-3">
        <div class="card-body">
            <h4>@author.Name</h4>
            <ul>
                @foreach (var book in author.Books)
                {
                    <li>@book</li>
                }
            </ul>
        </div>
    </div>
}
