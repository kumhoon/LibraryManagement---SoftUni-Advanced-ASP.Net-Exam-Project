@using LibraryManagement.Data.Models
@using LibraryManagement.Web.ViewModels.User
@model UserMembershipViewModel

@{
    ViewData["Title"] = "Membership";
}

<h2>@ViewData["Title"]</h2>

<div class="card mt-4 p-4">
    @if (Model.MembershipStatus == null)
    {
        <p>You have not applied for a membership yet.</p>
        <a asp-controller="Membership" asp-action="Apply" class="btn btn-primary">Apply for Membership</a>
    }
    else
    {
        <p>
            Your membership application status:
            <strong>@Model.MembershipStatus.ToString()</strong>
        </p>

        @if (Model.MembershipStatus == MembershipStatus.Revoked || Model.MembershipStatus == MembershipStatus.Rejected)
        {
            <p class="text-danger">Please contact support if you believe this is a mistake.</p>
        }
    }
</div>
<div class="text-center mt-4 d-flex justify-content-center flex-wrap gap-3">
    <a asp-controller="BorrowingRecord" asp-action="History" class="btn btn-outline-light">
        Borrowing Record History
    </a>
    <a asp-controller="FavouriteList" asp-action="Index" class="btn btn-outline-light">
        My Favourite Books
    </a>
</div>